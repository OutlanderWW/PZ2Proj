@model IEnumerable<InvestigationSupportSystem.Models.User>
@{
    ViewData["Title"] = "User List";
}

<h2>User List</h2>

<a class="btn btn-success mb-3" asp-controller="Account" asp-action="CreateUser">Add New User</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Badge Number</th>
            <th>Role</th>
            <th>Token</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.BadgeNumber</td>
                <td>@user.Role</td>
                <td>@user.Token</td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Index" asp-controller="Cases" class="btn btn-secondary">Cancel</a>